<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.PaywarnDAO">
	<insert id="add" parameterType="Paywarn"  useGeneratedKeys="true" keyProperty="id">
		insert into paywarn values(null,#{title},#{userId},#{username},#{curtime},#{price},#{endtime})
	</insert>

	<delete id="del" parameterType="int">
		delete from paywarn where id=#{id}
	</delete>

	<update id="update" parameterType="Paywarn">
		update paywarn set title=#{title},price=#{price},endtime=#{endtime} where id=#{id}
	</update>

	<select id="findById" resultType="Paywarn" parameterType="int">
		select * from paywarn where id=#{id}
	</select>

	<select id="show" resultType="Paywarn">
		select * from paywarn where 1=1
		<if test="null !=text and ''!=text">
			and `title` like concat('%',#{text},'%')
		</if>
	</select>
	<select id="my" resultType="Paywarn">
		select * from paywarn where 1=1
			and `user_id`=#{userId}

	</select>


	<select id="find" resultType="Notice" parameterType="java.lang.String">
		select * from paywarn where title=#{title}
	</select>


</mapper>

