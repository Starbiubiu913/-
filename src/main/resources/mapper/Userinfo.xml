<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserDAO">
	<select id="login" resultType="Userinfo" parameterType="Userinfo"> 
		select * from userinfo where name=#{name} and pwd=#{pwd}
	</select>
	
	<update id="update" parameterType="Userinfo">
		update userinfo set name=#{name},pwd=#{pwd} where id=#{id}
	</update>

	<select id="findById" resultType="Userinfo" parameterType="int">
		select * from userinfo where id=#{id}
	</select>
			
	<select id="show" resultType="Userinfo">
		select * from userinfo
	</select>
</mapper>

